@model IEnumerable<Role> 
@using ConsoleApplication.Models 
   
<div class="top-buffer"></div> 
<div class="panel panel-primary"> 
    <div class="panel-heading panel-head">Application Roles</div> 
    <div class="panel-body"> 
        <div class="btn-group"> 
            <a id="createRoleModal"  asp-action="AddRole" asp-controller="Role" class="btn btn-primary"> 
                <i class="glyphicon glyphicon-plus"></i>  Add Role 
            </a> 
        </div> 
        <div class="top-buffer"></div> 
        <table class="table table-bordered table-striped table-condensed"> 
            <thead> 
                <tr> 
                    <th>Name</th>                     
                    <th>Action</th> 
                </tr> 
            </thead> 
            <tbody> 
                @foreach (var item in Model) 
                { 
                    <tr> 
                        <td>@item.RoleName</td> 
                        @if(!item.RoleName.Equals("Admin"))
                        {                                            
                        <td>                             
                           
                            <a id="deleteApplicationRoleModal"  asp-action="DeleteRole" asp-route-id="@item.Id" asp-controller="Role" class="btn btn-danger"> 
                                <i class="glyphicon glyphicon-trash"></i>  Delete 
                            </a> 
                            
                        </td> 
                        }
                    </tr> 
                } 
            </tbody> 
        </table> 
    </div> 
</div> 
      
@section scripts 
{ 
    <script src="~/js/application-role-index.js" asp-append-version="true"></script> 
}