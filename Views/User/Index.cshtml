@model IEnumerable<UserListView> 
@using ConsoleApplication.Models.Entities 


<div class="top-buffer" style="margin-top:10%"></div> 
<div class="panel panel-primary"> 
    <div class="panel-heading panel-head">Users</div> 
    <div class="panel-body"> 
        <div class="btn-group"> 
            <a id="createEditUserModal"  asp-action="AddUser" asp-controller="User" class="btn btn-primary"> 
                <i class="glyphicon glyphicon-plus"></i>  Add User 
            </a> 
        </div> 
        <div class="top-buffer"></div> 
        <table class="table table-bordered table-striped table-condensed"> 
            <thead> 
                <tr> 
                    <th>Name</th> 
                    <th>Email</th>                    
                    <th>Action</th> 
                </tr> 
            </thead> 
            <tbody> 
                @foreach (var item in Model) 
                { 
                    <tr> 
                        <td>@item.Name</td> 
                        <td>@item.Email</td>                         
                        <td> 
                            <a id="editUserModal" asp-controller="User" asp-action="EditUser" asp-route-id="@item.Id"  
                               class="btn btn-info"> 
                                <i class="glyphicon glyphicon-pencil"></i>  Edit 
                            </a>   
                            <a id="deleteUserModal" asp-controller="User" asp-action="DeleteUser" asp-route-id="@item.Id"  method="POST" class="btn btn-danger"> 
                                <i class="glyphicon glyphicon-trash"></i>  Delete 
                            </a> 
                        </td> 
                    </tr> 
                } 
            </tbody> 
        </table> 
    </div> 
</div>  
   
@section scripts{
     <script type="text/javascript" src="~/js/user-index.js" asp-append-version="true"></script>
}
