
  @using Microsoft.AspNetCore.Identity 
@using ConsoleApplication.Models.Entities 
@inject UserManager<ApplicationUser> UserManager 
 @model ConsoleApplication.Models.ViewModels.ItemViewModel


@section styles{
    <link rel="stylesheet" href="/styles.css" />
}
<div class="col-md-3"></div>
<div class="container col-md-6">
<div class="panel panel-default panel-shadow">
    <div class="panel-heading">Update</div>
    <form asp-controler="Home" asp-action="Update" method="POST" class="form-horizontal" style="margin-top:10%" >
        <input class="form-control" type="Hidden" asp-for="@Model.Items.ItemID">
      
      <div class="panel-body" style="align-content:center">
       <div class="form-group">          
                
                <input type="hidden" class="form-control "  asp-for="@Model.Items.Title">
            
        </div>
         <div class="form-group">          
                <label asp-for="@Model.Items.Description" class="col-md-2 control-label"></label>
                <div class="col-md-4">
                <textarea autocomplete="off" class="form-control "  asp-for="@Model.Items.Description"></textarea>
            </div>
        </div>
         <div class="form-group">          
                <label asp-for="@Model.Items.Tags" class="col-md-2 control-label"></label>
                <div class="col-md-4">
                <input autocomplete="off" class="form-control "  asp-for="@Model.Items.Tags">
            </div>
        </div>
        <div class="form-group">          
                <div class="col-md-4">
                <input autocomplete="off" type="hidden" class="form-control "  asp-for="@Model.Items.Format">
            </div>
        </div>
        <div class="form-group">             
                <div class="col-md-4">
                <input type="hidden" class="form-control "  asp-for="@Model.Items.Path">
            </div>
        </div>
        <div class="form-group">             
                <div class="col-md-4">
                <input type="hidden" class="form-control "  asp-for="@Model.Items.date">
            </div>
        </div>
         <input type="hidden" class="form-control " value="@UserManager.GetUserName(User)"  asp-for="@Model.Items.Author">
            <button type="submit" class="btn btn-success">Edit</button>
        </div>
    </div>
    </form>
</div>
</div>
<div class="col-md-3"></div>
