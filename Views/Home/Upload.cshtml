 @using Microsoft.AspNetCore.Identity 
@using ConsoleApplication.Models.Entities 
@inject UserManager<ApplicationUser> UserManager 
 @model ConsoleApplication.Models.ViewModels.ItemViewModel
 @section styles{
    <link rel="stylesheet" href="/styles.css" />
}
<div class="col-md-3"></div>
<div class="container col-md-6" style="align-content: center">
<div class="panel panel-default panel-shadow" style="width:80%;">
    <div class="panel-heading">Upload Item</div>
<form method="post" class="form-horizontal" asp-action="Post" style="margin-top:10%" asp-controller="Home" enctype="multipart/form-data">

    <div class="panel-body">
        <div class="container">
            <div class="form-group">   
           <label asp-for="@Model.Items.Title" class="col-md-2 control-label"></label>   
                   <div class="col-md-4 ">       
                <input autocomplete="off" class="form-control "  asp-for="@Model.Items.Title">
                   </div>
        </div>
         <div class="form-group">          
                <label asp-for="@Model.Items.Description" class="col-md-2 control-label"></label>
                <div class="col-md-4">
                <textarea autocomplete="off" class="form-control "  asp-for="@Model.Items.Description"></textarea>
            </div>
        </div>
         <div class="form-group">          
                <label asp-for="@Model.Items.Tags" class="col-md-2 control-label"></label>
                <div class="col-md-4">
                <input autocomplete="off" class="form-control " value="New"  asp-for="@Model.Items.Tags">
            </div>
        </div>
        <input type="hidden" class="form-control " value="@UserManager.GetUserName(User)"  asp-for="@Model.Items.Author">
    <input type="file" name="files" style="margin-bottom:2%; margin-top:2%" />
    <input type="submit" class="btn btn-primary" value="Upload" />
        </div>
    </div>
</form>
</div>
</div>
<div class="col-md-3"></div>
