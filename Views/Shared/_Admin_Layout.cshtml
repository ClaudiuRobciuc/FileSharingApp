@using Microsoft.AspNetCore.Identity 
@using ConsoleApplication.Models.Entities 
   
@inject SignInManager<ApplicationUser> SignInManager 
@inject UserManager<ApplicationUser> UserManager 

@if (SignInManager.IsSignedIn(User)) 
{ 
<!DOCTYPE html>
<html lang="en">

<head>
    <title>Items</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/stylesAdmin.css" />
    
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u"
        crossorigin="anonymous">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    
</head>

<body>
    
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Admin" asp-action="Index" class="navbar-brand">File Browser</a>
            </div>
            <div class="navbar-collapse collapse">
                <form asp-area="" asp-controller="Account" asp-action="SignOff" method="post" id="logoutForm" class="navbar-right"> 
                <ul class="nav navbar-nav navbar-right"> 
                <li> 
                <a asp-area="" asp-controller="Home" asp-action="Index" title="Manage">Hello @UserManager.GetUserName(User)!</a> 
                    </li> 
                <li> 
                    <button type="submit" class="btn btn-link navbar-btn navbar-link">Log off</button> 
                </li> 
                </ul> 
                </form> 
            </div>
        </div>
        
    </div>

    
    
    @RenderSection("styles", required: false)
    @RenderSection("scripts", required: false)
    <div class= "container">
        @RenderBody()
    </div>
</body>
</html>
}
else 
{ 
    <ul class="nav navbar-nav navbar-right">       
        <li><a asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li> 
    </ul> 
}