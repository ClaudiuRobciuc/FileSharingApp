 @model ConsoleApplication.Models.ViewModels.ItemViewModel
 @section styles{
    <link rel="stylesheet" href="/stylesAdmin.css" />
}

 <form method="POST" class="form-horizontal" asp-action="Create" style="margin-top:10%" asp-controller="admin" enctype="multipart/form-data">
      
       <div class="form-group">          
                <label asp-for="@Model.Items.Title" class="col-md-2 control-label"></label>
                <div class="col-md-4">
                <input class="form-control "  asp-for="@Model.Items.Title">
            </div>
        </div>
         <div class="form-group">          
                <label asp-for="@Model.Items.Description" class="col-md-2 control-label"></label>
                <div class="col-md-4">
                <input class="form-control "  asp-for="@Model.Items.Description">
            </div>
        </div>
         <div class="form-group">          
                <label asp-for="@Model.Items.ShortDescription" class="col-md-2 control-label"></label>
                <div class="col-md-4">
                <input class="form-control "  asp-for="@Model.Items.ShortDescription">
            </div>
        </div>
        
         <div class="form-group">          
                <label asp-for="@Model.Items.categoryKey" class="col-md-2 control-label"></label>
                <div class="col-md-4">
                <select asp-for="@Model.Items.categoryKey" class="form-control" multiple>
                    @foreach(var c in Model.Categories)
                    {
                        <option value="@c.CategoryID">@c.CategoryType</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group">
            <input type="file" name="files" style="margin-bottom:2%; margin-top:2%" />
        
            <button type="submit" class="btn btn-success">Create</button>
        </div>
        
      
 </form>