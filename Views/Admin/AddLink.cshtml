
 @model ConsoleApplication.Models.ViewModels.ItemViewModel


@section styles{
    <link rel="stylesheet" href="/stylesAdmin.css" />
}

    <form asp-controler="Admin" asp-action="AddLink" method="POST" class="form-horizontal" style="margin-top:10%" >
      
       <div class="form-group">          
                <label class="col-md-2 control-label">Link</label>
                <div class="col-md-4">
                <input autocomplete="off" class="form-control "  asp-for="@Model.Items.Link">
            </div>
        </div>
        <div class="form-group">          
                <label asp-for="@Model.Items.Title" class="col-md-2 control-label"></label>
                <div class="col-md-4">
                <input autocomplete="off" class="form-control "  asp-for="@Model.Items.Title">
            </div>
        </div>
         <div class="form-group">          
                <label asp-for="@Model.Items.Description" class="col-md-2 control-label"></label>
                <div class="col-md-4">
                <input autocomplete="off" class="form-control "  asp-for="@Model.Items.Description">
            </div>
        </div>
         <div class="form-group">          
                <label asp-for="@Model.Items.Tags" class="col-md-2 control-label"></label>
                <div class="col-md-4">
                <input autocomplete="off" class="form-control " value="new"  asp-for="@Model.Items.Tags">
            </div>
        </div>
            <button type="submit" class="btn btn-success">Create</button>
        </div>
      
 </form>