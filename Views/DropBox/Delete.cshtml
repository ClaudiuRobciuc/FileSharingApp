@model ConsoleApplication.Models.Entities.DropBoxItems
@section styles{
    <link rel="stylesheet" href="/styles.css" />
}
<div style="margin-left:10vw">
    <h3>Delete confirmation</h3>
    <p>Are you sure you want to delete @Model.Title?</p>
    <form asp-controler="DropBox" asp-action="Delete" method="POST" class="form-horizontal" style="margin-top:10%" >
    <div class="row">
        <button type="submit" class="btn btn-success col-xs-3 " style="width:3vw; height:3.6vh; margin-right:5%" >Yes</button>
        <a class="btn btn-danger btn-sm col-xs-3" style="width:3vw; height:3.6vh" asp-controller="Home" asp-action="Index" >No</a> 
        <input class="form-control" type="Hidden" asp-for="@Model.ItemID">
        <div class="panel-body" style="align-content:center">
        <div class="form-group">          
                <div class="col-md-6">
                <input autocomplete="off" type="hidden" class="form-control "  asp-for="@Model.Format">
            </div>
        </div>
        <div class="form-group">             
                <div class="col-md-4">
                <input type="hidden" class="form-control "  asp-for="@Model.Path">
            </div>
        </div>
        <div class="form-group">             
                <div class="col-md-4">
                <input type="hidden" class="form-control "  asp-for="@Model.date">
            </div>
        </div>
        
    </div>
    </form>
</div>